{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#151920"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#f0f1ef"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 27,
                "textSizeSecondary": 23,
                "textSizeSecondaryHint": 25
            }
        },
        {
            "description": "Common spacing values",
            "dimensions": {
                "spacingThin": 6,
                "spacingSmall": 12,
                "spacingMedium": 24,
                "spacingLarge": 48,
                "spacingExtraLarge": 72
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "textStyleBase": {
            "description": "Base font description; set color and core font family",
            "values": [
                {
                    "color": "@colorTextPrimary",
                    "fontFamily": "Amazon Ember"
                }
            ]
        },
        "textStyleBase0": {
            "description": "Thin version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "100"
            }
        },
        "textStyleBase1": {
            "description": "Light version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "300"
            }
        },
        "mixinBody": {
            "values": {
                "fontSize": "@textSizeBody"
            }
        },
        "mixinPrimary": {
            "values": {
                "fontSize": "@textSizePrimary"
            }
        },
        "mixinSecondary": {
            "values": {
                "fontSize": "@textSizeSecondary"
            }
        },
        "textStylePrimary": {
            "extend": [
                "textStyleBase1",
                "mixinPrimary"
            ]
        },
        "textStyleSecondary": {
            "extend": [
                "textStyleBase0",
                "mixinSecondary"
            ]
        },
        "textStyleBody": {
            "extend": [
                "textStyleBase1",
                "mixinBody"
            ]
        },
        "textStyleSecondaryHint": {
            "values": {
                "fontFamily": "Bookerly",
                "fontStyle": "italic",
                "fontSize": "@textSizeSecondaryHint",
                "color": "@colorTextPrimary"
            }
        }
    },
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "when": "${viewport.shape == 'round'}",
                "type": "Container",
                "direction": "column",
                "height": "100vh",
                "alignItems": "center",
                "items": [
                    {
                        "type": "Image",
                        "source": "${payload.bodyTemplate1Data.backgroundImage.sources[0].url}",
                        "position": "absolute",
                        "width": "100vw",
                        "height": "100vh",
                        "scale": "best-fill"
                    },
                    {
                        "type": "AlexaHeader",
                        "headerTitle": "${payload.bodyTemplate1Data.textContent.primaryText.text}"
                    },
                    {
                        "type": "Image",
                        "source": "https://s3.amazonaws.com/broken-sequence-skill/three-stacks-of-coins.png",
                        "width": 100,
                        "height": 100
                    },
                    {
                        "type": "Text",
                        "text": "${payload.bodyTemplate1Data.textContent.secondaryText.text}",
                        "fontSize": 25,
                        "paddingLeft": "@marginLeft",
                        "paddingRight": "@marginRight",
                        "textAlign": "center",
                        "spacing": 15
                    },
                    {
                        "type": "Text",
                        "text": "${payload.bodyTemplate1Data.textContent.helpTextSmall.text}",
                        "fontSize": 25,
                        "paddingLeft": "@marginLeft",
                        "paddingRight": "@marginRight",
                        "textAlign": "center",
                        "spacing": 15
                    },
                    {
                        "type": "Container",
                        "paddingLeft": "@marginLeft",
                        "paddingRight": "@marginRight",
                        "alignItems": "center",
                        "spacing": 20,
                        "item": [
                            {
                                "type": "Frame",
                                "borderRadius": 30,
                                "borderColor": "white",
                                "borderWidth": 3,
                                "width": "60vw",
                                "item": [
                                    {
                                        "type": "TouchWrapper",
                                        "item": [
                                            {
                                                "type": "Text",
                                                "text": "Next Question",
                                                "spacing": "@spacingSmall",
                                                "style": "textStyleBody",
                                                "textAlign": "center",
                                                "fontSize": 20,
                                                "fontWeight": "bold",
                                                "lineHeight": 3
                                            }
                                        ],
                                        "onPress": {
                                            "type": "SendEvent",
                                            "arguments": [
                                                "next_question"
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "type": "Container",
                "direction": "row",
                "height": "100vh",
                "items": [
                    {
                        "type": "Image",
                        "source": "${payload.bodyTemplate1Data.backgroundImage.sources[1].url}",
                        "position": "absolute",
                        "width": "100vw",
                        "height": "100vh",
                        "scale": "best-fill"
                    },
                    {
                        "type": "Container",
                        "width": "60%",
                        "paddingLeft": "@marginLeft",
                        "paddingRight": "@marginLeft",
                        "paddingTop": "@marginTop",
                        "paddingBottom": "@marginBottom",
                        "item": [
                            {
                                "type": "Frame",
                                "backgroundColor": "#2dd784",
                                "height": "85vh",
                                "borderRadius": 10,
                                "item": [
                                    {
                                        "type": "Container",
                                        "alignItems": "center",
                                        "paddingTop": "@marginTop",
                                        "items": [
                                            {
                                                "type": "Image",
                                                "source": "https://s3.amazonaws.com/broken-sequence-skill/three-stacks-of-coins.png",
                                                "width": 150,
                                                "height": 150
                                            },
                                            {
                                                "type": "Text",
                                                "text": "<b>${payload.bodyTemplate1Data.textContent.primaryText.text}</b>",
                                                "spacing": 20
                                            },
                                            {
                                                "type": "Text",
                                                "text": "${payload.bodyTemplate1Data.textContent.secondaryText.text}",
                                                "spacing": 20,
                                                "fontSize": 25
                                            },
                                            {
                                                "type": "Text",
                                                "text": "${payload.bodyTemplate1Data.textContent.helpTextLarge.text}",
                                                "spacing": 10,
                                                "fontSize": 25
                                            },
                                            {
                                                "type": "Frame",
                                                "borderRadius": 30,
                                                "borderColor": "white",
                                                "borderWidth": 3,
                                                "spacing": 30,
                                                "width": "30vw",
                                                "item": [
                                                    {
                                                        "type": "TouchWrapper",
                                                        "item": [
                                                            {
                                                                "type": "Text",
                                                                "text": "Next Question",
                                                                "spacing": "@spacingSmall",
                                                                "style": "textStyleBody",
                                                                "textAlign": "center",
                                                                "fontSize": 20,
                                                                "fontWeight": "bold",
                                                                "lineHeight": 3
                                                            }
                                                        ],
                                                        "onPress": {
                                                            "type": "SendEvent",
                                                            "arguments": [
                                                                "next_question"
                                                            ]
                                                        }
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Container",
                        "paddingRight": "@marginLeft",
                        "paddingTop": "@marginTop",
                        "paddingBottom": "@marginBottom",
                        "width": "40%",
                        "item": [
                            {
                                "type": "Frame",
                                "backgroundColor": "#26C6DA",
                                "height": "85vh",
                                "borderRadius": 10,
                                "paddingTop": "@marginTop",
                                "item": [
                                    {
                                        "type": "Container",
                                        "alignItems": "center",
                                        "items": [
                                            {
                                                "type": "Frame",
                                                "item": [
                                                    {
                                                        "type": "Image",
                                                        "source": "${payload.bodyTemplate1Data.coinImageUrl.sources[0].url}",
                                                        "width": "200",
                                                        "height": "200"
                                                    }
                                                ]
                                            },
                                            {
                                                "type": "Frame",
                                                "paddingTop": "@marginTop",
                                                "item": [
                                                    {
                                                        "type": "Text",
                                                        "text": "<b>Total</b>",
                                                        "fontSize": "30",
                                                        "fontFamily": "Bookerly"
                                                    }
                                                ]
                                            },
                                            {
                                                "type": "Frame",
                                                "item": [
                                                    {
                                                        "type": "Text",
                                                        "text": "<b>${payload.bodyTemplate1Data.score}</b>",
                                                        "fontSize": "100",
                                                        "color": "gold",
                                                        "fontFamily": "Bookerly"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
